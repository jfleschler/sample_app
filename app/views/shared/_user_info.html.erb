<% @user ||= current_user %>
<div class="user_info">
  <a href="<%= user_path(@user) %>">
    <%= gravatar_for @user, :size => 30 %>
    <span class="user_name">
      <%= @user.name %>
    </span>
    <span class="microposts">
      <%= pluralize(@user.microposts.count, "micropost") %>
    </span>
  </a>
</div>
